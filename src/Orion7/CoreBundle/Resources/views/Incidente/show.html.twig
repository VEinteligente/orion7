<span class="titulo_denuncia">Estado:</span> {{ incidente.estado.nombre }}<br>
<span class="titulo_denuncia">Municipio:</span> {{ incidente.municipio.nombre }}<br>
<span class="titulo_denuncia">Parroquia:</span> {{ incidente.parroquia.nombre }}<br>
<span class="titulo_denuncia">Centro:</span> {{ incidente.centro.nombre }}<br>
<span class="titulo_denuncia">Codigo Centro:</span> {{ incidente.centro.codigo }}<br>
<br/>

{% for denuncia in incidente.denuncias %}
	{% for subcategoria in denuncia.subcategorias %}
        	<b class="titulo_denuncia">{{ subcategoria.nombre }}, </b>
        {% endfor %}
                :<br>
                Relato: {{ denuncia.relato }}
                <br>
                Telefono: {{ denuncia.telefonoDenunciante }}
                <br>
                Nombre Denunciante: {{ denuncia.nombreDenunciante }}
                <br>
                Hora Incidente: {{ denuncia.horaHecho|date('g:i a') }}
                <br>
                Hora Registro Denuncia: {{ denuncia.horaRegistro|date('g:i a') }}
                <br>
	{% else %}
                No hay denuncias en incidente.denuncias
{% endfor %}
<br><br>
