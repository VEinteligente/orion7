<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
        <title>{% block title %}Orion7{% endblock %} - Orion7</title>
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        {% block javascript %}
            <script src="{{ asset('js/jquery-1.8.3.min.js') }}"></script>
            <script src="{{ asset('js/jquery-ui-1.9.2.custom.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
        {% endblock %}
        {% block stylesheets %}
            <link href="{{ asset('css/screen.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('css/orion7/jquery-ui-1.9.2.custom.min.css') }}" type="text/css" rel="stylesheet" />

        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <section id="wrapper">
            <header id="header">
                           
                {% block navigation %}
                    <nav>
                        <ul class="navigation">
                            <li><a class="menu" href="#">Denuncias</a></li>
                            <li><a class="menu" href="#">Filtro</a></li>
                            <li><a class="menu" href="#">Canalizaci√≥n</a></li>
                            <li><a class="menu" href="#">Login/Logout</a></li>
                        </ul>
                    </nav>
                {% endblock %}
                
                <div class"clear"></div>
            </header>
            <section class="main-col">
                {% render "Orion7CoreBundle:Mensaje:getMensajes" %}
                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="flash-notice">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                {% block body %}{% endblock %}
            </section>
            
            
        </section>
        <div id="footer">
                {% block footer %}
                    Orion 7 loguitos de Voto Joven y de VI y demas
                {% endblock %}
            </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>